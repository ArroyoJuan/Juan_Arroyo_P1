@model Pacientes

@{
    ViewData["Title"] = "Home Page";
}

<h2 class="titulo">Registrar Paciente o Agendar Cita</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<label id="mensajeResultado">
    @if (TempData["SuccessMessage"] != null)
    {
        <span class="text-success">@TempData["SuccessMessage"]</span>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <span class="text-danger">@TempData["ErrorMessage"]</span>
    }
</label>
<div>
    <div>
        <form asp-action="Buscar" method="post">
            <div class="box_IngreseCedula">
                <label>Ingrese codigo:</label>
                <input asp-for="id_paciente" type="text" class="form-control" />
                <button type="submit" class="btn btn-primary">Buscar</button>
            </div>
        </form>
    </div>
    <div>
        <form asp-action="Agendar" method="post">
            <div class="box_IngresarDatosCita">
                <div class="form-group">
                    <label>Id Paciente:</label>
                    <input asp-for="id_paciente" type="text" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Fecha y Hora de la Cita:</label>
                    <input asp-for="id_paciente" type="text" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Motivo de la Consulta:</label>
                    <input asp-for="id_paciente" type="text" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Estado de la Consulta:</label>
                    <select asp-for="estados" class="form-control">
                        <option value="Pendiente">Pendiente</option>
                        <option value="En_proceso">En proceso</option>
                        <option value="Completado">Completado</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Agentar Cita</button>
            </div>
        </form>
    </div>
</div>
